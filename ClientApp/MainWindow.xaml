<Window x:Class="ClientApp.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="NBA Client" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Players">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5" >
                    <TextBox x:Name="NameFilter" Width="100" Margin="0,0,5,0"/>
                    <TextBox x:Name="TeamFilter" Width="100" Margin="0,0,5,0"/>
                    <TextBox x:Name="SeasonFilter" Width="100" Margin="0,0,5,0"/>
                    <Button Content="Load" Click="OnLoadPlayers"/>
                </StackPanel>
                <DataGrid x:Name="PlayersGrid" Grid.Row="1" AutoGenerateColumns="True"/>
            </Grid>
        </TabItem>
        <TabItem Header="Upload XML">
            <StackPanel Margin="10">
                <Button Content="Select XML" Click="OnSelectXml" Width="100" Margin="0,0,0,5"/>
                <TextBlock x:Name="XmlResult"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="SOAP Search">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBox x:Name="SoapTerm" Width="150" Margin="0,0,5,0"/>
                    <Button Content="Search" Click="OnSoapSearch"/>
                </StackPanel>
                <TextBox x:Name="SoapResult" AcceptsReturn="True" Height="200"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Weather">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBox x:Name="CityBox" Width="150" Margin="0,0,5,0"/>
                    <Button Content="Get" Click="OnGetWeather"/>
                </StackPanel>
                <TextBox x:Name="WeatherResult" AcceptsReturn="True" Height="200"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Config">
            <StackPanel Margin="10">
                <TextBox x:Name="ApiKeyBox" Width="300" Margin="0,0,0,5"/>
                <Button Content="Apply" Click="OnApplyConfig" Width="80"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
